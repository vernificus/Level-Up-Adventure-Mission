rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isTeacherOfClass(classId) {
      // Get the class document to check the teacherId
      let classData = get(/databases/$(database)/documents/classes/$(classId)).data;
      return classData.teacherId == request.auth.uid;
    }

    // =========================================================

    // TEACHERS
    // Only the teacher can read/write their own profile
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }

    // CLASSES
    match /classes/{classId} {
      // Anyone can read classes (needed to lookup by code)
      // Ideally, we'd query by code, but read is needed for list access
      allow read: if true;

      // Only authenticated users can create classes
      allow create: if isAuthenticated() && request.resource.data.teacherId == request.auth.uid;

      // Only the teacher owner can update/delete
      allow update, delete: if isAuthenticated() && resource.data.teacherId == request.auth.uid;
    }

    // STUDENTS
    match /students/{studentId} {
      // Get the student data to find their class
      // Students can read/write their own data
      // Teachers of the class can read student data

      allow create: if true; // Allow creation during join (we trust the code logic for now)

      allow read: if true; // Simplified: needed for game state loading.
      // Ideally: if resource.data.id == request.auth.uid || isTeacherOfClass(resource.data.classId);
      // But 'students' collection might be queried by classId

      allow update: if true; // Simplified: Students need to update XP/coins frequently
    }

    // SUBMISSIONS
    match /submissions/{submissionId} {
      // Students can create
      allow create: if true;

      // Students can read their own, Teachers can read their class's submissions
      allow read: if true;

      // Only Teachers can update (grade) submissions
      // We check if the user is the teacher of the class associated with this submission
      allow update: if isAuthenticated() && isTeacherOfClass(resource.data.classId);
    }
  }
}
